FROM alpine:3.4
MAINTAINER Tim Kropp @sometheycallme

COPY /fixtures/behave /tutorials

RUN apk upgrade --no-cache --available && \
    apk add --no-cache \
      python \
      gcc \
      bash \
      git \
      curl 
      py-pip \
      && pip install --upgrade pip \
      && pip install behave \
      && \
    :

ENTRYPOINT ["python"]
